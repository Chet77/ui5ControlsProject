<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="application.detail.feedInputDemoPage" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Feed Input">
		<content>
			<!-- Best practice notes -->
			<Panel expandable="true" expanded="true">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Best Practice"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<VBox>
						<items>
							<Text text="--Add Text---"/>
							<Text text="--Add Text---"/>
							<Text text="--Add Text---"/>
							<Text text="--Add Text---"/>
							<Text text="--Add Text---"/>
						</items>
					</VBox>
				</content>
			</Panel>
			<!-- Example -->
			<Panel expandable="true" expanded="true" class="listExample">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Example"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<FeedInput
						post="submitFeed"
						icon="images/FemaleE1.png"
						class="feedInputStyle">
					</FeedInput>
					<List
					showSeperators="Inner"
					items="{/entries}">
						<FeedListItem
							sender = "{author}"
							info = "{type}"
							timestamp = "{dateAdded}"
							text = "{text}"
							senderPress = ""
							icon = "{picURL}"
							iconPress = ""
							iconDensityAware = "">
						</FeedListItem>
					</List>
				</content>
			</Panel>
		</content>
	</Page>
</core:View>
